{
  "_comment": "Single Node, Single GPU with Tools",
  "_description": "Single GPU configuration with GPU profiling tools",
  "_use_case": "Single GPU benchmarks with monitoring, no distributed training",
  
  "gpu_vendor": "AMD",
  "guest_os": "UBUNTU",
  
  "tools": [{
    "name": "gpu_info_vram_profiler"
  }],
  
  "k8s": {
    "kubeconfig": "~/.kube/config",
    "namespace": "default",
    "gpu_count": 1,
    
    "memory": "16Gi",
    "memory_limit": "32Gi",
    "cpu": "8",
    "cpu_limit": "16",
    
    "image_pull_policy": "Always",
    "backoff_limit": 3
  },
  
  "env_vars": {
    "OMP_NUM_THREADS": "8"
  },
  
  "debug": false
}

